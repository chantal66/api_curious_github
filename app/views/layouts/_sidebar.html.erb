<div class="sidebar">
  <% if current_user %>
      <%	 binding.pry %>
      <%= image_tag current_user.avatar_url, class: "avatar" %>
      <div class="card">
        <h1 class="name"><%= current_user.name %></h1>
        <p class="login"><%= current_user.login %></p>
      </div>
      <p class="bio"><%= current_user.bio %></p>
      <div class="card">
        <p class="company"><%= current_user.company %></p>
        <p class="location"><%= current_user.location %></p>
        <p class="email"><%= current_user.email %></p>
        <p class="blog"><%= current_user.blog %></p>
      </div>
  <% else %>
      <p>Log in to show data</p>
  <% end %>
</div>